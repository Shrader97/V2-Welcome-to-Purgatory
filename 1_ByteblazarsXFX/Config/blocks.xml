	<set xpath="/blocks/block[@name='SingularityConfig']/property[@class='XMLExtensions']/property[@name='ShaderlessFX']/@value">true</set>
	<set xpath="/blocks/block[@name='SingularityConfig']/property[@class='XMLExtensions']/property[@name='EntityStun']/@value">true</set>
	<set xpath="/blocks/block[@name='SingularityConfig']/property[@class='XMLExtensions']/property[@name='NonlethalExplosives']/@value">true</set>
	<set xpath="/blocks/block[@name='SingularityConfig']/property[@class='XMLExtensions']/property[@name='AmmoSounds']/@value">true</set>
