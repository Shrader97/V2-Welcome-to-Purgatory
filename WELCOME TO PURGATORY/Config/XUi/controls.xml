<configs>
	<set xpath="/controls/ingredient_header">
		<rect name="header" width="447" height="27">
			<rect depth="2" width="65" height="25">
				<sprite depth="2" name="backgroundMain" sprite="menu_empty3px" pos="-3,3" width="71" height="30" color="[black]" type="sliced" fillcenter="false" />
				<sprite color="[darkGrey]" type="sliced" />
				<label depth="3" text="ITEM" text_key="lblitem" pos="32,-12" height="26" font_size="25" justify="center" pivot="center"/>
			</rect>
			<rect depth="2" width="236" height="25" pos="68,0">
				<sprite depth="2" name="backgroundMain" sprite="menu_empty3px" pos="-3,3" width="242" height="30" color="[black]" type="sliced" fillcenter="false" />
				<sprite color="[darkGrey]" type="sliced" />
				<label depth="3" text="NAME" text_key="mmTextName" pos="117,-12" width="230" height="25" font_size="25" justify="center" pivot="center"/>
			</rect>
			<rect depth="2" width="140" height="25" pos="307,0">
				<sprite depth="2" name="backgroundMain" sprite="menu_empty3px" pos="-3,3" width="146" height="30" color="[black]" type="sliced" fillcenter="false" />
				<sprite color="[darkGrey]" type="sliced" />
				<label depth="3" text="COUNT" text_key="lblContextCraftCount" pos="70,-12" width="64" height="25" font_size="25" justify="center" pivot="center" />
			</rect>
		</rect>
	</set>

	<set xpath="/controls/ingredient_row">
		<rect name="row" width="447" height="27" controller="IngredientEntry">
			<rect depth="2" width="65" height="25">
				<sprite depth="2" name="backgroundMain" sprite="menu_empty3px" pos="-3,2" width="71" height="30" color="[black]" type="sliced" fillcenter="false" />

				<sprite color="[lightGrey]" type="sliced" />
				<sprite depth="2" name="icon" width="25" height="25" atlas="ItemIconAtlas" sprite="{itemicon}" color="{itemicontint}" pos="30,-12" pivot="center" foregroundlayer="true"/>
			</rect>
			<rect depth="2" width="236" height="25" pos="68,0">
				<sprite depth="2" name="backgroundMain" sprite="menu_empty3px" pos="-3,2" width="242" height="30" color="[black]" type="sliced" fillcenter="false" />
				<sprite color="[lightGrey]" type="sliced" />
				<label depth="3" name="name" pos="117,-12" width="230" height="25" font_size="25" color="[labelColor]" justify="center" pivot="center" text="{itemname}"/>
			</rect>
			<rect depth="2" width="140" height="25" pos="307,0">
				<sprite depth="2" name="backgroundMain" sprite="menu_empty3px" pos="-3,2" width="146" height="30" color="[black]" type="sliced" fillcenter="false" />
				<sprite color="[lightGrey]" type="sliced" />
				<label depth="3" name="needCount" pos="70,-12" width="120" height="25" font_size="25" color="[labelColor]" justify="center" pivot="center" text="{haveneedcount}"/>
			</rect>
		</rect>
	</set>

</configs>